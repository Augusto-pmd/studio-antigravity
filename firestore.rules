rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper to get the role of the currently signed-in user.
    // Returns null if the user is not signed in or has no profile/role.
    function getUserRole() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      if (request.auth != null && userDoc != null) {
        return userDoc.data.role;
      }
      return null;
    }

    function isDirector() {
      return getUserRole() == 'Dirección';
    }
    
    function isAdmin() {
      let role = getUserRole();
      return role == 'Dirección' || role == 'Administración';
    }

    function canSupervise() {
      let role = getUserRole();
      return role == 'Dirección' || role == 'Supervisor' || role == 'Administración';
    }

    function canManageSales() {
      let role = getUserRole();
      return role == 'Dirección' || role == 'Administración' || role == 'Supervisor';
    }

    match /{path=**}/sales/{saleId} {
      allow read: if isSignedIn();
      allow write: if canManageSales();
    }

    match /{path=**}/expenses/{expenseId} {
      allow read, write: if isSignedIn();
    }

    match /users/{userId} {
      allow read, write: if isAdmin() || request.auth.uid == userId;
      
      match /cashAccounts/{cashAccountId} {
        allow read, write: if request.auth.uid == userId;

        match /transactions/{transactionId} {
            allow read, write: if request.auth.uid == userId;
        }
      }
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if canSupervise();

      match /contracts/{contractId} {
        allow read, write: if isSignedIn();
      }
    }

    match /suppliers/{supplierId} {
      allow read: if isSignedIn();
      allow write: if canSupervise();
    }
    
    match /employees/{employeeId} {
      allow read: if isSignedIn();
      allow write: if canSupervise();

      match /dailyWageHistory/{historyId} {
        allow read, write: if canSupervise();
      }
    }
    
    match /technicalOfficeEmployees/{employeeId} {
      allow read, write: if isDirector();
      match /salaryHistory/{salaryHistoryId} {
        allow read, write: if isDirector();
      }
    }

    match /monthlySalaries/{salaryId} {
      allow read, write: if isDirector();
    }
    
    match /timeLogs/{logId} {
      allow read: if isDirector() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /contractors/{contractorId} {
      allow read: if isSignedIn();
      allow write: if canSupervise();

      match /personnel/{personnelId} {
        allow read, write: if canSupervise();
      }
    }
    
    match /assets/{assetId} {
      allow read, write: if canSupervise();
    }
    
    match /fundRequests/{fundRequestId} {
      allow create: if isSignedIn();
      allow read, update, delete: if canSupervise() || (isSignedIn() && resource.data.requesterId == request.auth.uid);
    }

    match /payrollWeeks/{payrollWeekId} {
      allow read, write: if isSignedIn();
    }

    match /taskRequests/{taskRequestId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isSignedIn() && (resource.data.requesterId == request.auth.uid || resource.data.assigneeId == request.auth.uid || canSupervise());
    }
    
    match /cashAdvances/{cashAdvanceId} {
      allow read, write: if canSupervise();
    }

    match /attendances/{attendanceId} {
      allow read, write: if canSupervise();
    }

    match /treasuryAccounts/{treasuryAccountId} {
      allow read, write: if canSupervise();
      match /transactions/{transactionId} {
        allow read, write: if canSupervise();
      }
    }
    
    match /recurringExpenses/{expenseId} {
        allow read, write: if isAdmin();
    }

    match /moratorias/{moratoriaId} {
      allow read, write: if isAdmin();
    }

    match /stockItems/{itemId} {
      allow read: if isSignedIn();
      allow write: if getUserRole() in ['Pañolero', 'Dirección', 'Administración', 'Supervisor'];
      
      match /movements/{movementId} {
        allow read: if isSignedIn();
        allow write: if getUserRole() in ['Pañolero', 'Dirección', 'Administración', 'Supervisor'];
      }
    }

    match /contractorCertifications/{certificationId} {
      allow create: if isSignedIn();
      allow read, update, delete: if canSupervise() || (isSignedIn() && resource.data.requesterId == request.auth.uid);
    }

    match /clientFollowUps/{followUpId} {
      allow read, write: if isDirector();
    }
  }
}
