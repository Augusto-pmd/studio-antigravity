rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserRole() {
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      if (isSignedIn() && exists(userPath) && 'role' in get(userPath).data) {
        return get(userPath).data.role;
      }
      return null;
    }

    function isDirector() {
      return getUserRole() == 'Dirección';
    }
    
    function isAdmin() {
      let role = getUserRole();
      return role == 'Dirección' || role == 'Administración';
    }

    function canSupervise() {
      let role = getUserRole();
      return role == 'Dirección' || role == 'Supervisor' || role == 'Administración';
    }

    function canManageSales() {
      let role = getUserRole();
      return role == 'Dirección' || role == 'Administración' || role == 'Supervisor';
    }

    // --- Collections ---

    match /users/{userId} {
      allow read, update: if isAdmin() || request.auth.uid == userId;
      allow create, delete: if isAdmin(); // Create/delete is an admin action
      
      match /cashAccounts/{cashAccountId} {
        allow read, write: if request.auth.uid == userId;
        match /transactions/{transactionId} {
            allow read, write: if request.auth.uid == userId;
        }
      }
    }
     match /users {
      allow list: if isSignedIn();
    }

    match /projects/{projectId} {
      allow get: if isSignedIn();
      allow write: if canSupervise();

      match /contracts/{contractId} {
        allow read, write: if isSignedIn();
      }
    }
    match /projects {
      allow list: if isSignedIn();
    }

    // Sales are a subcollection of projects
    match /projects/{projectId}/sales/{saleId} {
      allow get: if isSignedIn();
      allow write: if canManageSales();
    }
     match /projects/{projectId}/sales {
      allow list, create: if canManageSales();
    }
    
    // Expenses are a subcollection of projects
    match /projects/{projectId}/expenses/{expenseId} {
      allow get, write: if isSignedIn();
    }
    match /projects/{projectId}/expenses {
      allow list, create: if isSignedIn();
    }

    match /suppliers/{supplierId} {
      allow get: if isSignedIn();
      allow write: if canSupervise();
    }
     match /suppliers {
      allow list: if isSignedIn();
    }
    
    match /employees/{employeeId} {
      allow get: if isSignedIn();
      allow write: if canSupervise();

      match /dailyWageHistory/{historyId} {
        allow read, write: if canSupervise();
      }
    }
     match /employees {
      allow list: if isSignedIn();
    }
    
    match /technicalOfficeEmployees/{employeeId} {
      allow get, write: if isDirector();
      match /salaryHistory/{salaryHistoryId} {
        allow read, write: if isDirector();
      }
    }
    match /technicalOfficeEmployees {
        allow list: if isDirector();
    }

    match /monthlySalaries/{salaryId} {
      allow get, write: if isDirector();
    }
    match /monthlySalaries {
        allow list: if isDirector();
    }
    
    match /timeLogs/{logId} {
      allow get: if isDirector() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    match /timeLogs {
      allow list: if isSignedIn();
    }

    match /contractors/{contractorId} {
      allow get: if isSignedIn();
      allow write: if canSupervise();

      match /personnel/{personnelId} {
        allow get, write: if canSupervise();
      }
       match /personnel {
        allow list: if canSupervise();
      }
    }
    match /contractors {
      allow list: if isSignedIn();
    }
    
    match /assets/{assetId} {
      allow get, write: if canSupervise();
    }
    match /assets {
      allow list: if canSupervise();
    }
    
    match /fundRequests/{fundRequestId} {
      allow get: if canSupervise() || (isSignedIn() && resource.data.requesterId == request.auth.uid);
      allow create: if isSignedIn();
      allow update, delete: if canSupervise() || (isSignedIn() && resource.data.requesterId == request.auth.uid);
    }
     match /fundRequests {
      allow list: if isSignedIn();
    }

    match /payrollWeeks/{payrollWeekId} {
      allow get, write: if isSignedIn();
    }
    match /payrollWeeks {
      allow list: if isSignedIn();
    }

    match /taskRequests/{taskRequestId} {
      allow get: if isSignedIn() && (resource.data.requesterId == request.auth.uid || resource.data.assigneeId == request.auth.uid || canSupervise());
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.requesterId == request.auth.uid || resource.data.assigneeId == request.auth.uid || canSupervise());
    }
     match /taskRequests {
      allow list: if isSignedIn();
    }
    
    match /cashAdvances/{cashAdvanceId} {
      allow get, write: if canSupervise();
    }
     match /cashAdvances {
      allow list: if canSupervise();
    }

    match /attendances/{attendanceId} {
      allow get, write: if canSupervise();
    }
    match /attendances {
      allow list: if canSupervise();
    }

    match /treasuryAccounts/{treasuryAccountId} {
      allow get, write: if isAdmin();
      match /transactions/{transactionId} {
        allow read, write: if isAdmin();
      }
    }
     match /treasuryAccounts {
      allow list: if isAdmin();
    }
    
    match /recurringExpenses/{expenseId} {
        allow get, write: if isAdmin();
    }
    match /recurringExpenses {
      allow list: if isAdmin();
    }

    match /moratorias/{moratoriaId} {
      allow get, write: if isAdmin();
    }
    match /moratorias {
      allow list: if isAdmin();
    }

    match /stockItems/{itemId} {
      allow get: if isSignedIn();
      allow write: if getUserRole() in ['Pañolero', 'Dirección', 'Administración', 'Supervisor'];
      
      match /movements/{movementId} {
        allow get, write: if getUserRole() in ['Pañolero', 'Dirección', 'Administración', 'Supervisor'];
      }
       match /movements {
        allow list: if isSignedIn();
      }
    }
    match /stockItems {
        allow list: if isSignedIn();
    }

    match /contractorCertifications/{certificationId} {
      allow get: if canSupervise() || (isSignedIn() && resource.data.requesterId == request.auth.uid);
      allow create: if isSignedIn();
      allow update, delete: if canSupervise() || (isSignedIn() && resource.data.requesterId == request.auth.uid);
    }
    match /contractorCertifications {
      allow list: if isSignedIn();
    }

    match /clientFollowUps/{followUpId} {
      allow get, write: if isDirector();
    }
     match /clientFollowUps {
      allow list: if isDirector();
    }
  }
}