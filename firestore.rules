rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isDirector() {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return isSignedIn() &&
         exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         userRole == 'Dirección';
    }
    
    function isAdmin() {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return isSignedIn() &&
         exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         (userRole == 'Dirección' || userRole == 'Administración');
    }

    function canSupervise() {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return isSignedIn() &&
         exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         userRole in ['Dirección', 'Supervisor', 'Administración'];
    }

    function canManageSales() {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return isSignedIn() &&
        (userRole == 'Dirección' || userRole == 'Administración' || userRole == 'Supervisor');
    }

    match /{path=**}/sales/{saleId} {
      allow read, write: if isSignedIn();
    }

    match /{path=**}/expenses/{expenseId} {
      allow read, write: if isSignedIn();
    }

    match /users/{userId} {
      allow read, write: if true;
      
      match /cashAccounts/{cashAccountId} {
        allow read, write: if true;

        match /transactions/{transactionId} {
            allow read, write: if true;
        }
      }
    }

    match /projects/{projectId} {
      allow read, write: if isSignedIn();

      match /contracts/{contractId} {
        allow read, write: if isSignedIn();
      }
    }

    match /suppliers/{supplierId} {
      allow read, write: if true;
    }
    
    match /employees/{employeeId} {
      allow read, write: if true;
    }
    
    match /technicalOfficeEmployees/{employeeId} {
      allow read, write: if isDirector();
      match /salaryHistory/{salaryHistoryId} {
        allow read, write: if isDirector();
      }
    }

    match /monthlySalaries/{salaryId} {
      allow read, write: if isDirector();
    }
    
    match /timeLogs/{logId} {
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /contractors/{contractorId} {
      allow read, write: if true;

      match /personnel/{personnelId} {
        allow read, write: if true;
      }
    }
    
    match /assets/{assetId} {
      allow read, write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Dirección', 'Administración', 'Supervisor'];
    }
    
    match /fundRequests/{fundRequestId} {
      allow read, write: if true;
    }

    match /payrollWeeks/{payrollWeekId} {
      allow read, write: if isSignedIn();
    }

    match /taskRequests/{taskRequestId} {
      allow read, write: if isSignedIn();
    }
    
    match /cashAdvances/{cashAdvanceId} {
      allow read, write: if true;
    }

    match /attendances/{attendanceId} {
      allow read, write: if true;
    }

    match /treasuryAccounts/{treasuryAccountId} {
      allow read, write: if canSupervise();
      match /transactions/{transactionId} {
        allow read, write: if canSupervise();
      }
    }
    
    match /recurringExpenses/{expenseId} {
        allow read, write: if true;
    }

    match /moratorias/{moratoriaId} {
      allow read, write: if true;
    }

    match /stockItems/{itemId} {
      allow read, write: if isSignedIn();
      
      match /movements/{movementId} {
        allow read, write: if isSignedIn();
      }
    }

    match /contractorCertifications/{certificationId} {
      allow read, write: if true;
    }
  }
}
